@model IEnumerable<QLKHO.Models.DonViTinh>
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <div class="container-fluid">
        <div style="max-height: 500px ;" class="row px-5 overflow-auto">
            <h1 style="text-align: center; width: 100%;" class="h3 mb-2 text-gray-800">Đơn Vị Tính</h1>

            <table class="table table-hover table-bordered ">
                <thead class="text-center">
                <th scope="col">ID</th>
                <th scope="col">Tên Đơn Vị Tính</th>
                <th scope="col">Action</th>
                </thead>
                @foreach (var item in Model)
                {
                    <tr style="text-align:center">
                        <td>
                            @Html.DisplayFor(modelItem => item.MaDVT)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenDVT)
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.MaDVT }, new { @class = "btn btn-primary" })

                            @Html.ActionLink("Xóa", "Delete", new { id = item.MaDVT }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="container pt-3">
            <div class="row justify-content-end">
                <a href="~/DonViTinhs/Create" class="btn btn-primary w-block-8">Thêm</a>
            </div>
        </div>
    </div>


</div>