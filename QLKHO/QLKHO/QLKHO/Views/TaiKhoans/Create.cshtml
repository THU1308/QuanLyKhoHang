@model QLKHO.Models.TaiKhoan

<div class="container-fluid">
    <div style="max-height: 500px ;" class="row px-5 overflow-auto">
        <h1 style="text-align: center; width: 100%;" class="h3 mb-2 text-gray-800">Tài Khoản</h1>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div style=" display:flex" class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div style="padding:0 16rem;">
                    <div class="form-group">
                        @Html.LabelFor(model => model.MaTK, "Mã Tài Khoản", htmlAttributes: new { @class = "control-label " })
                        <div class="">
                            @{
                                Random random = new Random();
                                int matk = random.Next(1000);
                            }
                            <input name="MaTK" class="form-control" value="@matk" readonly />
                            @Html.ValidationMessageFor(model => model.MaTK, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TenTK, "Tên Tài Khoản", htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            @Html.EditorFor(model => model.TenTK, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenTK, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" style="display:none">
                        @Html.LabelFor(model => model.MaPQ, "MaPQ", htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            <select class="form-control" name="MaPQ">
                                <option selected value="2">Staff</option>
                            </select>
                            @Html.ValidationMessageFor(model => model.MaPQ, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" style="display:none">
                        @Html.LabelFor(model => model.MatKhau, "Mật Khẩu", htmlAttributes: new { @class = "control-label " })
                        <div class="">
                            <input name="MatKhau" class="form-control" value="quanlykhosb@23" readonly />
                            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SoDienThoai, "Số Điện Thoại", htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label " })
                        <div class="">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.HoTen, "Họ Tên", htmlAttributes: new { @class = "control-label " })
                        <div class="">
                            @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.NgaySinh, "Ngày Sinh", htmlAttributes: new { @class = "control-label " })
                        <div class="">
                            <input name="NgaySinh" type="date" class="form-control" required/>
                            @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" style="display:none">
                        @Html.LabelFor(model => model.Anh, htmlAttributes: new { @class = "control-label " })
                        <div class="">
                            <input name="Anh" value="#" readonly class="form-control" />
                            @Html.ValidationMessageFor(model => model.Anh, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        }
        <div style="position:absolute;bottom:10%">
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>

</div>