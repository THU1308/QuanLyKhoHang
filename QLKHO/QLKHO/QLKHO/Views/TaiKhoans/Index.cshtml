@model IEnumerable<QLKHO.Models.TaiKhoan>
<div class="container-fluid">
    <div style="max-height: 500px ;" class="row px-5 overflow-auto">
        <h1 style="text-align: center; width: 100%;" class="h3 mb-2 text-gray-800">Tài Khoản</h1>

        <table style="table-layout:fixed;" class="table table-hover table-bordered ">
            <thead class="text-center">
            <th scope="col">Mã TK</th>
            <th scope="col">Tên Tài Khoản</th>
            @*<th scope="col">Mật Khẩu</th>*@
            <th scope="col">Số Điện Thoại</th>
            <th scope="col">Email</th>
            <th scope="col">Họ Tên</th>
            <th scope="col">Ngày Sinh</th>
            <th scope="col">Action</th>
            </thead>

            @foreach (var item in Model)
            {
                <tr style="text-align:center">
                    <td>
                        @Html.DisplayFor(modelItem => item.MaTK)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenTK)
                    </td>
                    @*<td style="word-wrap: break-word; overflow-wrap: break-word;">
                            @Html.DisplayFor(modelItem => item.MatKhau)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.SoDienThoai)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoTen)
                    </td>
                    <td>
                        @item.NgaySinh.Value.ToString("dd-MM-yyyy")
                    </td>

                    <td style="display:flex;justify-content:space-between;align-items:center">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaTK }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaTK }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="container pt-3">
        <div class="row justify-content-end">
            <a href="~/TaiKhoans/Create" class="btn btn-primary w-block-8">Thêm</a>
        </div>
    </div>
</div>