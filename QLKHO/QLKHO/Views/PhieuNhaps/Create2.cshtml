            <form class="container" method="post">
                <h1 class="h3 mb-2 text-gray-800">Đơn Hàng</h1>
                <div class="row px-5 border border-primary pb-4  justify-content-around">
                    <div style="width: 40%;" class="form-group">
                        <label for="mapn">Mã Phiếu</label>
                        <input readonly class="form-control" name="mapn" value="@ViewBag.mapn" />
                    </div>

                    <div style="width: 40%;" class="form-group">
                        <label for="ncc">Nhà Cung Cấp</label>

                        <input readonly name="MaNCC" value="@ViewBag.ncc" class="form-control" />
                        <input hidden name="idncc" value="@ViewBag.idncc" />
                    </div>
                    <div class="row justify-content-around " style="width:100%;">
                        <div style="width:40%;">
                            <label for="ngaynhap">Ngày Nhập</label>
                            <input readonly name="ngaynhap" id="ngaynhap" class="form-control" value="@ViewBag.ngaynhap">
                        </div>

                        <div style="width:40%">
                            <label for="nhanvien">Nhân Viên</label>
                            <input readonly name="MaTK" id="nhanvien" class="form-control" value="@ViewBag.nv">
                            <input hidden name="idtk" value="@ViewBag.idnv" />
                        </div>
                    </div>
                </div>

                <h1 class="h3 mb-2 text-gray-800">Chi Tiết Đơn</h1>

                <div class="row px-5 border border-primary pb-4 ">
                    <div class="row justify-content-around " style="width:100%;">
                        <div style="width: 40%;">
                            <label for="sanpham">Sản Phẩm</label>
                            @Html.DropDownList("TenSanPham", new SelectList(ViewBag.SanPham, "MaSP", "TenSP"), new { @class = "form-control" })

                        </div>

                        <div style="width: 40%;">

                        </div>
                    </div>

                    <div class="row justify-content-around " style="width:100%;">
                        <div style="width: 40%;">
                            <label for="soluong">Số Lượng</label>
                            <input name="soluong" type="text" id="soluong" class="form-control">
                        </div>

                        <div style="width: 40%;">
                            <label for="dongia">Đơn Giá</label>
                            <input name="dongia" type="text" id="dongia" class="form-control">
                        </div>
                    </div>

                    <div style="width: 100%;" class="row pt-3 justify-content-end px-5">
                        <button type="submit" formaction="~/PhieuNhaps/Create2" class="btn btn-success">Thêm</button>
                    </div>

                    <table class="table table-bordered table-hover mt-3 px-5">
                        <thead class="text-center">
                        <th scope="col">Tên Sản Phẩm</th>
                        <th scope="col">Đơn Giá</th>
                        <th scope="col">Số Lượng</th>
                        <th scope="col">Thành Tiền</th>
                        <th scope="col">Action</th>
                        </thead>
                        @foreach (var item in Model)
                        {
                            decimal? thanhTien = item.GiaBan * item.SoLuongCon;
                            <tr class="text-center">
                                <td>
                                    @item.TenSP
                                </td>

                                <td>
                                    @item.GiaBan
                                </td>
                                <td>
                                    @item.SoLuongCon
                                </td>
                                <td>
                                    @(thanhTien.HasValue ? thanhTien.Value : 0m)
                                </td>
                                <td class="d-flex justify-content-around">
                                </td>
                            </tr>
                        }
                    </table>
                </div>

                <div style="width: 100%;" class="row mt-3">
                    <button formaction="~/PhieuNhaps/Add" class="btn btn-outline-primary">Tạo Đơn</button>
                </div>
            </form>
        </div>
