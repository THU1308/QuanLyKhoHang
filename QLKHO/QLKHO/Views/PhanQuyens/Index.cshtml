                            </a>

                        </div>
                    </li>

                </ul>

            </nav>

            <div class="container-fluid">
                <div style="max-height: 500px ;" class="row px-5 overflow-auto">
                    <h1 style="text-align: center; width: 100%;" class="h3 mb-2 text-gray-800">Phân Quyền</h1>

                    <table class="table table-hover table-bordered ">
                        <thead class="text-center">
                        <th scope="col">Tài Khoản</th>
                        <th scope="col">Quyền</th>
                        <th scope="col">Action</th>

                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                foreach (var taikhoan in item.TaiKhoan)
                                {
                            <tr class="text-center">
                                <td>
                                    @taikhoan.TenTK
                                </td>
                                <td>
                                    @item.TenPQ
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit1", new { matk = taikhoan.MaTK,id = taikhoan.MaPQ }, new { @class = "btn btn-primary" })
                                </td>
                            </tr>
                                }
                            }
                        </tbody>

                    </table>
                </div>
               
            </div>
