            </div>

        </ul>


        <div style="width: 100%;" class="content">
            <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control bg-light border-0 mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
                </form>
                <ul class="navbar-nav ml-auto">
                    <div class="topbar-divider d-none d-sm-block"></div>

                    <li class="nav-item dropdown no-arrow">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="mr-2 d-lg-inline text-gray-600 small">Nguyễn Văn Thư</span>

                            <img style="width: 2rem; height: 2rem;" class="img-profile rounded-circle" src="img/undraw_profile.svg">
                        </a>

                        <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                            <a class="dropdown-item" href="#">
                                <i class="ti-user w-block-2 text-gray-400"></i> Profile
                            </a>
                            <a class="dropdown-item" href="#">
                                <i class="ti-settings w-block-2 text-gray-400"></i> Settings
                            </a>
                            <a class="dropdown-item" href="#">
                                <i class="ti-list w-block-2 text-gray-400"></i> Activity Log
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                <i class="ti-shift-right w-block-2 text-gray-400"></i> Logout
                            </a>
                        </div>
                    </li>

                </ul>

            </nav>

            <div class="container-fluid">
                <div style="max-height: 500px ;" class="row px-5 overflow-auto">
                    <h1 style="text-align: center; width: 100%;" class="h3 mb-2 text-gray-800">Khách Hàng</h1>

                    <table class="table table-hover table-bordered ">
                        <thead class="text-center">
                        <th scope="col">Tên Khách Hàng</th>
                        <th scope="col">Email</th>
                        <th scope="col">Số Điện Thoại</th>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr class="text-center">
                                <td>@item.TenKH</td>
                                <td>@item.Email</td>
                                <td>@item.SoDienThoai</td>
                                <td class="d-flex justify-content-around">
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaKH }, new { @class = "btn btn-primary px-1 w-block-4" })
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaKH }, new { @class = "btn btn-danger px-1 w-block-4" })

                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <div class="container pt-3">
                    <div class="row justify-content-end">
                        <a href="Create" class="btn btn-primary w-block-8">Thêm</a>
                    </div>
                </div>
            </div>
        </div>
